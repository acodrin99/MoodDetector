<!-- res/layout/activity_emotion_detection.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceDetectionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp" />

    <Button
        android:id="@+id/startDetectionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Emotion Detection"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/emotionResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detected Emotion: "
        android:layout_below="@id/startDetectionButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
