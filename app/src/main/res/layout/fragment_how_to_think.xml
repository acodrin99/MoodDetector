<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How to Think"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your thoughts play a crucial role in managing anxiety and depression. Here are some tips on how to think positively and constructively:"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Practice Gratitude: Focus on the things you are grateful for and write them down regularly."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Positive Affirmations: Use positive affirmations to challenge negative thoughts and boost self-esteem."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Mindfulness: Stay present in the moment and avoid dwelling on the past or worrying about the future."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Cognitive Restructuring: Identify and challenge cognitive distortions and replace them with balanced thoughts."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Self-Compassion: Treat yourself with kindness and understanding, especially during difficult times."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>
