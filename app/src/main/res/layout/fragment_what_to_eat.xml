<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What to Eat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A balanced diet can have a significant impact on your mental health. Here are some dietary recommendations:"
            android:textSize="16sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Omega-3 Fatty Acids: Include sources of omega-3 fatty acids such as salmon, flaxseeds, and walnuts to support brain health."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Fruits and Vegetables: Consume a variety of colorful fruits and vegetables to get essential vitamins and minerals."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Whole Grains: Choose whole grains like brown rice, quinoa, and oats for sustained energy levels."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Lean Protein: Incorporate lean protein sources such as chicken, turkey, beans, and legumes into your diet."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. Hydration: Drink plenty of water to stay hydrated and reduce fatigue and irritability."
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

    </LinearLayout>
</ScrollView>
